<div class="contextual">
  <%= link_to l(:label_image_new), {:controller => 'images', :action => 'new', :project_id => @project.id}, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_images_list) %></h2>

<% unless @images.empty? %>
<table class="list files">
  <thead><tr>
    <th><%= l(:field_id) %></th>
    <th><%= l(:field_image_name)%></th>
    <th><%= l(:field_image_file_name)%></th>
    <th><%= l(:field_image_type)%></th>
    <th><%= l(:field_image_spec)%></th>
    <th><%= l(:field_finish_time)%></th>
    <th><%= l(:field_image_svn_repo)%></th>
    <th><%= l(:field_image_svn_path)%></th>
    <th><%= l(:field_create_by)%></th>
  </tr></thead>
  <tbody>
<% @images.each do |image| %>
  <tr class="file <%= cycle("odd", "even") %>">
    <td class="id"><%= link_to h(image.id), :controller => 'images', :action => 'show', :id => image.id ,:project_id => @project.id%></td>
    <td class="name"><%= image.name %></td>
    <td class="file_name"><%= image.file_name %></td>
    <td class="type">
      <% if image.img_type == '0' %>
        Data
      <% else %>
        Program
      <% end %>
    </td>
    <td class="spec"><%= image.spec %></td>
    <td class="spec"><%= format_time(image.finish_time) %></td>
    <td class="spec"><%= image.svn_repo %></td>
    <td class="spec"><%= image.svn_path %></td>
    <td class="spec"><%= image.author %></td>
  </tr>
  <% end%>
  </tbody>
</table>
<p class="pagination"><%= pagination_links_full @image_pages %></p>

<% else %>
  <p class="nodata"><%=l(:label_no_data)%></p>
<% end %>
